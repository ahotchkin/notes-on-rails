<h1>Edit Note</h1>

<%# Partial not rendering - why??? %>
<%= render :partial => "layouts/errors", :locals => {:object => current_note} %>

<%= form_for current_note, html: {:class => "form"} do |f| %>

  <div class="mb-3">
    <%= f.label :title, :class => "form-label" %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :body, :class => "form-label" %>
    <%= f.text_area :body, :class => "form-control" %>
  </div>

  <br>

  <%= f.submit "Update Note", :class => "btn btn-center" %>

<% end %>
